{
  "name": "postcss-themed-monorepo",
  "private": true,
  "author": "Tyler Krupicka <tylerkrupicka@gmail.com>",
  "license": "MIT",
  "repository": "intuit/postcss-themed",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run --stream build",
    "test": "jest",
    "lint": "eslint packages/**/src/**/*.ts --fix",
    "release": "auto shipit"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "^7.2.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.1",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.7.7",
    "@logux/eslint-config": "^34.0.0",
    "@types/browserslist": "^4.4.0",
    "@types/caniuse-api": "^3.0.0",
    "@types/cssesc": "^3.0.0",
    "@types/debug": "^4.1.5",
    "@types/dlv": "^1.1.2",
    "@types/flat": "^5.0.1",
    "@types/jest": "^26.0.20",
    "@types/loader-utils": "^1.1.3",
    "@types/node": "^11.13.1",
    "@types/postcss-nested": "^4.1.0",
    "@types/webpack": "^4.39.2",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "all-contributors-cli": "^6.9.1",
    "auto": "^7.2.2",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^26.6.3",
    "eslint": "^6.6.0",
    "eslint-config-postcss": "^3.0.7",
    "eslint-config-prettier": "^6.5.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-xo": "^0.27.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-jest": "^23.0.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^12.1.0",
    "husky": "^1.3.1",
    "jest": "^26.6.3",
    "jest-preset-stylelint": "^3.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^8.1.5",
    "postcss-nested": "^4.1.2",
    "prettier": "^2.2.1",
    "tapable": "^1.1.3",
    "typescript": "^4.2.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "eslint-config-postcss",
      "xo",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "jest",
      "@typescript-eslint"
    ],
    "env": {
      "jest/globals": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "rules": {
      "max-len": 0,
      "valid-jsdoc": 0,
      "max-params": 0,
      "prefer-const": 1,
      "func-style": 0,
      "prefer-let/prefer-let": 0,
      "node/no-unsupported-features/es-syntax": 0,
      "guard-for-in": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/ban-ts-ignore": 0,
      "consistent-return": 0
    }
  },
  "jest": {
    "preset": "jest-preset-stylelint",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "test-component-themes",
      "test-modern-themes",
      "test-utils"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "auto": {
    "plugins": [
      "npm",
      "released",
      "all-contributors"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
